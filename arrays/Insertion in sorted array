#include <iostream>
using namespace std;


void insertelement(int a[], int n, int x)
{
int i;
	for ( i = n - 1; i >= 0; i--)
        if(x<a[i])
    {
        a[i + 1] = a[i];
        a[i]=x;
    }
}

int main()

{
    int a[100];
     int n;
     cout<<"enter sie of array"<<endl;
    cin>>n;
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    int x;


     cout<<"enter what to insert"<<endl;
     cin>>x;
    insertelement(a,n,x);
    n++;
     for( int i=0;i<n;i++)
     {
         cout<<a[i]<<" ";
     }
      return 0;

}
